{shell, [
        {apps, [cellphone]},
        {config, "conf/sys.config"}
    ]}.

{deps, [
        {cowboy, "2.4.0"},
        {cowboy, {git, "git://github.com/ninenines/cowboy.git", {tag, "2.4.0"}}}
        ]
}.

{erl_opts, [
            {i, "include"}
            ]}.

{relx, [
    {release, {cellphone, "0.1.0"}, [cellphone]},
    {dev_mode, true},
    {include_erts, true},
    {include_src, true},
    {extended_start_script, true},
    {incl_cond, include}
]}.

{profiles, [
    {prod, [
        {relx, [
            {dev_mode, false},
            {include_erts, true}
        ]}
    ]}
]}.

{shell, [
        {apps, [cellphone]},
        {config, "conf/sys.config"}
    ]}.

{deps, [
        {cowboy, "2.4.0"},
        {cowboy, {git, "git://github.com/ninenines/cowboy.git", {tag, "2.4.0"}}}
        ]
}.

{erl_opts, [
    debug_info,
    {i, "include"}
]}.

{relx, [
    {release, {cellphone, "0.1.0"}, [cellphone]},
    {dev_mode, true},
    {include_erts, false},
    {include_src, false},
    {extended_start_script, true},
    {incl_cond, include},
    {vm_args, "conf/vm.args"},
    {sys_config, "conf/sys.config"},
    {overlay, [{mkdir, "cellphone_data"}]}
]}.

{profiles, [
    {prod, [
        {relx, [
            {dev_mode, false},
            {include_erts, true}
        ]}
    ]}
]}.

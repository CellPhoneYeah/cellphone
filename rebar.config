{shell,
    [
        {apps, [cellphone, sasl]},
        {config, "conf/sys.cofnig"}
    ]
}.
{deps, [
    {cowboy, {git, "git://github.com/extend/cowboy.git", {tag, "1.0.0"}}}
]}.
{erl_opts, [debug_info]}.

{relx, [
    {release, {cellphone, "1.0.0"}, [cellphone]},
    {dev_mode, false},
    {include_erts, true},
    {system_libs, true},
    {include_src, false},
    {sys_config, "conf/sys.config"},
    {vm_args, "conf/vm.args"},
    {extended_start_script, true}
]}.
